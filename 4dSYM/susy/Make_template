# Four-dimensional N=4 supersymmetric Yang--Mills theory
#
# Generic make-include file
# This template file defines rules and macros common to all architectures
# It is intended to be an include file for other Makefiles
# Don't use it by itself!
#
# Targets:
#   susy_phi uses phi algorithm
#   susy_hmc uses hybrid Monte Carlo algorithm, i.e., phi + accept/reject
#   susy_corr calculates scalar correlators (Konishi, SUGRA, Wilson loops)
#   susy_stout calculates scalar correlators after stout smearing
#   susy_bilin calculates fermion bilinears
#   susy_eig calculates eigenvalues using PRIMME
#   susy_phase calculates the pfaffian phase
# Edit the Makefiles to change this.
#
# Routines in this directory use Hasenbusch preconditioning, multiple
#   time scale integration, and Omelyan.  See README.

MYINCLUDEDIR = .
INCLUDEDIR = ../include
#Where the complex and su3 libraries are
LIBDIR = ../libraries

GLOBAL_HEADERS =              \
  ${INCLUDEDIR}/config.h      \
  ${INCLUDEDIR}/complex.h     \
  ${INCLUDEDIR}/su3.h         \
  ${INCLUDEDIR}/comdefs.h     \
  ${INCLUDEDIR}/macros.h      \
  ${INCLUDEDIR}/field_alloc.h \
  ${INCLUDEDIR}/generic.h     \
  ${INCLUDEDIR}/loopend.h     \
  ${INCLUDEDIR}/io_lat.h

MY_HEADERS =  \
  lattice.h   \
  params.h    \
  defines.h   \
  primme.h    \
  susy_includes.h

HEADERS = ${GLOBAL_HEADERS} ${MY_HEADERS} ${INLINE_HEADERS}

# All required object files
# Basic set from current directory
MY_OBJECTS =          \
  setup.o             \
  setup_lambda.o      \
  setup_offset.o      \
  d_action.o          \
  gauge_info.o        \
  library_util.o      \
  utilities.o         \
  grsource.o          \
  fermion_repS.o      \
  fermion_rep_adjS.o  \
  d_link.o            \
  determinant.o       \
  hdelta0.o           \
  congrad_multi_field.o

# Basic set from generic directory
G_OBJECTS =           \
  d_plaq4.o           \
  ploop_dist.o        \
  io_helpers.o        \
  io_lat.o            \
  io_lat_utils.o      \
  make_lattice.o      \
  nersc_cksum.o       \
  ranstuff.o          \
  remap_stdio_from_args.o

# Selection of layout
LAYOUT = layout_hyper_prime.o

ADD_OBJECTS = ${MACHINE_DEP_IO} ${COMMPKG}

OBJECTS = ${MY_OBJECTS} ${G_OBJECTS} \
          ${LAYOUT} ${ADD_OBJECTS} ${EXTRA_OBJECTS}

#Libraries for complex numbers and su3 functions
QCDLIB = ${LIBDIR}/su3.${PRECISION}.a ${LIBDIR}/complex.${PRECISION}.a
LIBRARIES = ${QCDLIB}

# Default rule for C compilation
.c.o: ; ${CC} -c ${CFLAGS} $<

# To force a full remake when changing targets
LASTMAKE = .lastmake.${MAKEFILE}.${PRECISION}.${MYTARGET}

${LASTMAKE}: ${ALL_MAKES}
	-/bin/rm -f .lastmake.*
	${MAKE} -f ${MAKEFILE} clean
	touch ${LASTMAKE}

# All make files used in this compilation
ALL_MAKES =               \
  Make_template           \
  ${MAKEFILE}             \
  ../generic/Make_template

# To force a remake when changing any make file, header, or target
${OBJECTS} : ${HEADERS} ${LASTMAKE} ${ALL_MAKES}

##### Targets:
# Optional DEFINES for timing:
# -DCGTIME for CG timing and iterations
susy_hmc::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES = ${DEFINES} -DPHI_ALGORITHM -DHMC_ALGORITHM " \
	"EXTRA_OBJECTS = control.o update_o.o update_h.o setup_rhmc.o det_force.o "

susy_corr::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES = ${DEFINES} -DPHI_ALGORITHM -DCORR -DWLOOP " \
	"EXTRA_OBJECTS = control_corr.o d_correlator.o rsymm.o monopole.o \
	                 hvy_pot.o hvy_pot_polar.o unit.o gaugefix.o \
	                 hvy_pot_loop.o hvy_pot_polar_loop.o path.o "

susy_stout::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES = ${DEFINES} -DPHI_ALGORITHM -DCORR -DWLOOP -DSTOUT" \
	"EXTRA_OBJECTS = control_corr.o d_correlator.o rsymm.o monopole.o \
	                 hvy_pot.o hvy_pot_polar.o unit.o gaugefix.o stout.o \
	                 d_plaq4_lcl.o hvy_pot_loop.o hvy_pot_polar_loop.o path.o "

susy_hmc_corr::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES = ${DEFINES} -DPHI_ALGORITHM -DHMC_ALGORITHM -DCORR -DWLOOP " \
	"EXTRA_OBJECTS = control.o update_o.o update_h.o setup_rhmc.o det_force.o \
	                 d_correlator.o rsymm.o hvy_pot.o gaugefix.o \
	                 hvy_pot_loop.o hvy_pot_polar_loop.o path.o monopole.o "

susy_bilin::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES = ${DEFINES} -DPHI_ALGORITHM -DCORR -DWLOOP -DBILIN" \
	"EXTRA_OBJECTS = control_corr.o setup_rhmc.o d_bilinear.o d_correlator.o \
	                 hvy_pot.o hvy_pot_polar.o unit.o gaugefix.o rsymm.o \
	                 hvy_pot_loop.o hvy_pot_polar_loop.o path.o monopole.o "

susy_eig::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES = ${DEFINES} -DPHI_ALGORITHM -DEIG " \
	"LIBRARIES = ${LIBRARIES} ${PLIB} " \
	"LAPACK = -llapack -lblas " \
	"EXTRA_OBJECTS = control_eig.o eig.o gaugefix.o "

susy_phase::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES = ${DEFINES} -DPHI_ALGORITHM -DPHASE " \
	"EXTRA_OBJECTS = control_phase.o d_phase.o gaugefix.o io_phase.o "

# This target may be useful for debugging:
# Convert configuration into format the serial C++ code can read
susy_spill::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES = ${DEFINES} -DPHI_ALGORITHM " \
	"EXTRA_OBJECTS = control_spill.o "

# The targets below have not been used recently and may no longer function
susy_phi::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES = ${DEFINES} -DPHI_ALGORITHM " \
	"EXTRA_OBJECTS = control.o update_o.o update_h.o setup_rhmc.o det_force.o "

susy_phi_pg::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES = ${DEFINES} -DPHI_ALGORITHM -DPUREGAUGE " \
	"EXTRA_OBJECTS = control.o update_o.o update_h.o setup_rhmc.o det_force.o "

susy_hmc_pg::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES = ${DEFINES} -DPHI_ALGORITHM -DHMC_ALGORITHM -DPUREGAUGE " \
	"EXTRA_OBJECTS = control.o update_o.o update_h.o setup_rhmc.o det_force.o "

susy_hmc_sc::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES = ${DEFINES} -DPHI_ALGORITHM -DHMC_ALGORITHM -DCATTERALL_ALG " \
	"EXTRA_OBJECTS = control.o update_o.o update_h.o setup_rhmc.o det_force.o "

clean:
	-/bin/rm -f *.o

# Rules for generic routines
include ../generic/Make_template

libmake:
	@echo Building libraries with ${MAKELIBRARIES}
	cd ${LIBDIR} ;\
	${MAKE} -f ${MAKELIBRARIES} "APP_CC=${CC}" "PRECISION=${PRECISION}" all

localmake: ${OBJECTS} ${LIBRARIES}
	${LD} -o ${MYTARGET} ${LDFLAGS} \
	${OBJECTS} ${LIBRARIES} ${ILIB} -lm ${LAPACK}
	touch localmake

target: libmake localmake
